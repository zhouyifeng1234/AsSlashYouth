<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="chatOtherChangeContactWayModel"
                  type="com.slash.youth.ui.viewmodel.ChatOtherChangeContactWayModel"/>
    </data>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="11dp"
        >
            <ImageView
                android:id="@+id/iv_chat_other_avatar"
                android:layout_width="39dp"
                android:layout_height="39dp"
                android:scaleType="fitXY"
                android:src="@mipmap/chat_test_header"/>
            <View
                android:layout_width="39dp"
                android:layout_height="39dp"
                android:background="@mipmap/fillet_pic_rounded"/>

        </FrameLayout>

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="11dp"
            android:background="@drawable/chat_box_bg"
            android:orientation="vertical"
            android:paddingLeft="4dp"
        >
            <TextView

                android:layout_width="143dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="13dp"
                android:text="我要和您交换联系方式， 请同意"
                android:textColor="#333333"
                android:textSize="14sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_marginTop="13dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_deny"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_chat_deny_add_friend_bg"
                    android:gravity="center"
                    android:onClick="@{chatOtherChangeContactWayModel.refuseChangeContact}"
                    android:text="拒绝"
                    android:textColor="#ffffff"
                    android:textSize="14sp"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#F3F3F3"
                />
                <TextView
                    android:id="@+id/tv_agree"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_chat_agree_add_friend_bg"
                    android:gravity="center"
                    android:onClick="@{chatOtherChangeContactWayModel.agreeChangeContact}"
                    android:text="同意"
                    android:textColor="#ffffff"
                    android:textSize="14sp"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</layout>
